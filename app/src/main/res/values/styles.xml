<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LoadingProgressBar">
        <item name="android:layout_width">@dimen/progress_bar_height</item>
        <item name="android:layout_height">@dimen/progress_bar_height</item>
        <item name="android:theme">@style/AppTheme</item>
    </style>
    <style name="ArticleTextView">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/spacing_ml</item>
        <item name="android:layout_marginTop">@dimen/spacing_ml</item>
        <item name="android:layout_marginEnd">@dimen/spacing_ml</item>
        <item name="android:textColor">@android:color/primary_text_light_nodisable</item>
        <item name="android:textStyle">normal</item>
        <item name="android:shadowColor">@color/text_shadow</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>
</resources>